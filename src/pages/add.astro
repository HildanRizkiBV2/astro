---
import Layout from "../layout/layout.astro"
if(Astro.request.method === "POST"){
    const formData = await Astro.request.formData();
    const title = formData.get("title")
    const description = formData.get("description")
    const author = formData.get("author")
    const data = {title, description, author}
    await fetch("https://be-ashen-beta.vercel.app/add", {
        method: "POST",
        body: JSON.stringify(data),
        headers: {
            "Content-Type": "application/json"

        }
    })
    return Astro.redirect("/")

}
---
<Layout title="Add">
    

<form class="max-w-sm mx-auto pt-10 " method="POST" >
    <div class="mb-5">
      <label  class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">title</label>
      <input   name="title" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  />
    </div>
    <div class="mb-5">
      <label   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">description </label>
      <input  name="description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  />
    </div>
    <div class="mb-5">
        <label   class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">author </label>
        <input  name="author"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  />
    </div>
    <div class="flex items-start mb-5">
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"  >Submit</button>

  </form>
</Layout>